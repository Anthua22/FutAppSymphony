{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} Partidos - Nuevo {% endblock %}

{% block main_content %}
    <div class="mt-4">

        {% if error is defined and error is not empty %}
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="btn-close" data-dismiss="alert">&times;</button>
                <strong>Error</strong> {{ error }}
            </div>
        {% endif %}

        {{ form_start(form) }}

        <div class="row mb-3">
            <div class="col-6">

                <label class="mb-3">Equipo Local</label>
                {{ form_widget(form.equipolocal, {'attr': {'class': 'text-field form-select'}}) }}

            </div>
            <div class="col-6">
                <label class="mb-3">Equipo Visitante</label>
                {{ form_widget(form.equipovisitante, {'attr': {'class': 'text-field form-select'}}) }}
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12">
                <label class="mb-3">Arbitro</label>
                {{ form_widget(form.arbitro, {'attr': {'class': 'form-select'}}) }}
            </div>

        </div>

        <div class="row mb-3">

            <div class="col-12">
                <label class="mb-3">Direcci√≥n del encuentro</label>
                {{ form_widget(form.direccionencuentro,{'attr': {'class': 'text-field form-control'}}) }}
            </div>

        </div>

        <div class="row mb-3">

            <div class="col-6">
                <label class="mb-3">Fecha del encuentro</label>
                {{ form_widget(form.fecha_encuentro,{'attr': {'class': 'text-field form-control'}}) }}
            </div>

        </div>

        <div class="row mb-3">
            <div class="col-2">
                {{ form_row(form.guardar, {'attr':{'class':'btn btn-primary mt-5'}}) }}
            </div>
        </div>

        {{ form_end(form) }}

    </div>

{% endblock %}
