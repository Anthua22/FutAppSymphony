{% extends 'layout.html.twig' %}

{% block title %} Login {% endblock %}

{% block main_content %}

    <div class="row justify-content-center" style="margin-top: 150px">
        <div class="col-6">

            <h2 class="mb-3">Entrar en FutApp</h2>
            {% if error %}
                <div class="alert alert-danger mb-4">
                    {{ error.messageKey | trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <form method="post" action="{{ path('futapp_check_login') }}">
                <div class="mt-4">
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" value="{{ last_username }}" name="_username" id="floatingInput" required placeholder="name@example.com">
                        <label for="floatingInput">Email</label>
                    </div>
                    <div class="form-floating">
                        <input type="password" class="form-control" name="_password" id="floatingPassword" required placeholder="Password">
                        <label for="floatingPassword">Password</label>
                    </div>
                </div>
                <div class="mt-3">
                    <input type="submit" value="Entrar" class="col-2 btn btn-primary"/>
                    <a href="{{ path('futapp_register') }}" class="col-2 btn btn-secondary">Registrarse</a>
                </div>

            </form>
        </div>


    </div>



{% endblock %}