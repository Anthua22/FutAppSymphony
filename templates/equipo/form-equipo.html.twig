{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} Partidos - Nuevo {% endblock %}

{% block main_content %}
    <div class="mt-4">

        {% if error is defined and error is not empty %}
            <div class="row">
                <div class="alert alert-danger col-12">
                    {{ error }}
                </div>
            </div>
        {% endif %}

        {{ form_start(form) }}

        <div class="row mt-5">


            {{ form_label(form.nombre, null, {'label_attr': {'class': 'label-field'}}) }}
            {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}


        </div>

        <div class="row mt-5">
            {{ form_label(form.correo, null, {'label_attr': {'class': 'label-field'}}) }}
            {{ form_widget(form.correo, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="row mt-5">

            {{ form_label(form.direccion_campo, null, {'label_attr': {'class': 'label-field','innerText':'Direcci√≥n campo entrenamiento'}}) }}
            {{ form_widget(form.direccion_campo, {'attr': {'class': 'form-control'}}) }}


        </div>

        <div class="row mt-5">


                {{ form_label(form.fotoFile, null, {'label_attr': {'class': 'label-field'}}) }}
                {{ form_widget(form.fotoFile,{'attr':{'class':'form-control' }}) }}


        </div>


        <div class="row">
            <div class="col-2 offset-5">
                {{ form_row(form.guardar, {'attr':{'class':'btn btn-primary mt-5'}}) }}
            </div>
        </div>

        {{ form_end(form) }}

    </div>

{% endblock %}