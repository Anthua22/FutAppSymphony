<div class="card shadow">
    <a href="{{ path('futapp_detalle_equipo',{id: equipo.id}) }}"><img class="card-img-top"
                     src="{% if equipo.foto is empty %}/imgs/escudodefecto.jpg{% else %}{{ asset('uploads/fotos/' ~ equipo.foto) }}{% endif %}"/></a>
    <div class="card-body">
        <h5 class="card-title"><a href="{{ path('futapp_detalle_equipo',{id: equipo.id}) }}" class="nombreEquipo">{{ equipo.nombre }}</a></h5>
        <div class="row mt-3">
            <span class="label col-6">Correo:</span>
            <span class="card-text col-6">{{ equipo.correo }}</span>
        </div>

        <div class="row">
            <span class="label col-6">Direcci√≥n campo:</span>
            <div class="col-6 text-muted">{{ equipo.direccionCampo }}</div>

        </div>
    </div>
    <div class="card-footer">
        <div class="row justify-content-evenly">
            <a href="{{ path('futapp_editar_equipo',{id: equipo.id}) }}" class="col-3 btn btn-primary">Editar <i
                        class="fa fa-edit"></i></a>
            <a href="{{ path('futapp_borrar_equipo',{id: equipo.id}) }}" class="col-3 btn btn-danger">Borrar <i
                        class="fa fa-trash"></i></a>
            <a href="{{ path('futapp_detalle_equipo',{id: equipo.id}) }}" class="col-3 btn btn-info">Ver <i
                        class="fa fa-eye"></i></a>
        </div>

    </div>
</div>


