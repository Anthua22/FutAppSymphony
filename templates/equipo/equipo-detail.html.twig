{% extends "layout.html.twig" %}

{% block title %} {{ parent() }} {{ equipo.nombre }}{% endblock %}
{% block main_content %}
    <div class="col-3">
        <img class="w-100"
             src="{% if equipo.foto is empty %}/imgs/escudodefecto.jpg{% else %}{{ asset('uploads/fotos/' ~ equipo.foto) }}{% endif %}"/>
    </div>
    <div class="col-9">
        <h4>{{ equipo.nombre }}</h4>
        <h4>
            <small class="text-muted">{{ equipo.correo }}</small>
        </h4>

        <div class="row">
            <a href="{{ path('futapp_editar_equipo',{id: equipo.id}) }}" class="col-3 btn btn-primary" style="margin-right: 5px;">Editar <i
                        class="fa fa-edit"></i></a>
            <a href="{{ path('futapp_borrar_equipo',{id: equipo.id}) }}" class="col-3 btn btn-danger">Borrar <i
                        class="fa fa-trash"></i></a>
        </div>



    </div>

    <div class="mt-5">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item waves-effect waves-light">
                <a class="nav-link active" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="true">Nuevos</a>
            </li>
            <li class="nav-item waves-effect waves-light">
                <a class="nav-link" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="false">Pasados</a>
            </li>

        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="card-columns mt-4">
                    <div class="row">
                        {% for partido in partidospasados %}
                            <div class="col-4 mb-4">
                                {% include 'fut_app/parts/partido.part.html.twig' with {
                                    'partido':partido
                                } only %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
           <div class="tab-pane fade active show" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                <div class="card-columns mt-4">
                    <div class="row">
                        {% for partido in partidosnuevos %}
                            <div class="col-4 mb-4">
                                {% include 'fut_app/parts/partido.part.html.twig' with {
                                    'partido':partido
                                } only %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
